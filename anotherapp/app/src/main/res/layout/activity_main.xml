<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Run first app"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRunFirstApp"
            android:onClick="onClickFirstApp"
            android:layout_marginBottom="92dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonForCall" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"/>
    <Button
            android:text="RUN CALL APP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonForCall"
            android:onClick="onClickCallApp"
            android:layout_marginBottom="244dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
</android.support.constraint.ConstraintLayout>